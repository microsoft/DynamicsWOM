<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/itemIndexButton"
        style="@style/transparent_button_style"
        android:layout_width="59dp"
        android:layout_height="30dp"
        android:background="@drawable/done_list_button_background"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/debug_step_number"
        android:textAlignment="center"
        android:textColor="@color/white_text_color"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/itemTextButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/itemTextButton"
        style="@style/transparent_button_style"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="9dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:text="@string/debug_step"
        android:textAlignment="textStart"
        android:textSize="24dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/itemIndexButton"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        layout="@layout/separator_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>